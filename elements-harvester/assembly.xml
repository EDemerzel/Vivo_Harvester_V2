<assembly xmlns="http://maven.apache.org/POM/4.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">
    <id>distrib</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <baseDirectory>/</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>bin</directory>
            <outputDirectory>.</outputDirectory>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>example-config</outputDirectory>
            <excludes>
                <exclude>*logback.xml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*logback.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>example-scripts</directory>
            <outputDirectory>example-scripts</outputDirectory>
            <excludes>
                <exclude>example-elements/*overrides.xsl</exclude>
                <exclude>**/data/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>example-scripts/example-elements</directory>
            <outputDirectory>example-scripts/example-elements/example-overrides</outputDirectory>
            <includes>
                <include>*overrides.xsl</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>systemd</directory>
            <outputDirectory>systemd</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>
